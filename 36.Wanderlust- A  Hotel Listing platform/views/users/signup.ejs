<% layout("/layouts/boilerplate")%>
<h1 class="col-6 offset-3"> Sign Up on WanderLust</h1>
<div class="row">
  <div class="col-6 offset-3">
    <form action="/signup" method="POST"class="needs-validation" novalidate >
        <div class="mb-3">
            <label for="username" class="form-label" > Username </label>
            <br />
    
            <input
              name="username"
              id="username"
              class="form-control"
              aria-describedby="emailHelp"
              name="listing[title]"
              placeholder="username"
              type="text"
              required
            />

            <div class="valid-feedback"> Looks good!</div>
            <!-- Email  -->
        <div class="mb-3">
            <label for="email" class="form-label">Email </label>
            <br />
            <input
              name="email"
              id="email"
              class="form-control"
              aria-describedby="emailHelp"
              name="listing[title]"
              placeholder="email"
              type="email"
              required
            />
            <div class="valid-feedback"> Looks good!</div>
            <!-- Password  -->
        <div class="mb-3">
            <label for="password" class="form-label">password </label>
            <br />
            <input
              name="password"
              id="password"
              class="form-control"
              aria-describedby="emailHelp"
              name="listing[title]"
              placeholder="email"
              type="password"
              required
            />
            <div class="valid-feedback"> Looks good!</div>
<br><br>
<button class="btn btn-success">Sign up </button>


    </form>
  </div>
</div>
